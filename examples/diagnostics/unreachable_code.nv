func unreachable_code(): int do
    # the compiler doesnt yet check if
    # the condition is always true for
    # unreachable code detection
    if true then
        return 0;
    end

    return 1;
end

func unreachable_code_loop(): int do
    # but it does know for certain loops!
    loop do
        return 0;
    end

    return 1;
end
