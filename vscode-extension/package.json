{
    "name": "nova-language",
    "displayName": "Nova language",
    "description": "Language support for the Nova programming language",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "nova",
                "aliases": [
                    "Nova",
                    "nova"
                ],
                "extensions": [
                    ".nv",
                    ".nova"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "nova",
                "scopeName": "source.nova",
                "path": "./syntaxes/nova.tmLanguage.json"
            }
        ]
    }
}
